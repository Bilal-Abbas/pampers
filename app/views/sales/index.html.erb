<div class="container-fluid">
  <div class="row">
    <div class="col mt-4">
      <div class="d-flex justify-content-end mb-3">
        <%= link_to "New sale", new_sale_path, class: 'btn btn-primary' %>
      </div>
      <div class="table-responsive">
        <table class="table product-table">
          <thead class="bg-primary text-white">
            <tr>
              <th>Sale id</th>
              <th>Date</th>
              <th>Customer Name</th>
              <th>Booker Name</th>
              <th>Supplier Name</th>
              <th>Address</th>
              <th>Total Amount</th>
              <th>Total Recieved</th>
              <th>Credit Recieved</th>
              <th>Payment Method</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @sales.each do |sale| %>
              <tr>
                <td>S<%= sale.id %></td>
                <td><%= sale.created_at.strftime("%m/%d/%Y") %></td>
                <td><%= sale.customer_name %></td>
                <td><%= sale.order_booker_name %></td>
                <td><%= sale.supplier_name %></td>
                <td><%= sale.customer_address %></td>
                <td><%= sale.total_amount %></td>
                <td><%= sale.total_received %></td>
                <td><%= sale.credit_amount %></td>
                <td><%= sale.payment_method %></td>
                <td class="text-center">
                  <%= link_to 'Edit', edit_sale_path(sale), class: 'btn btn-warning btn-sm' %>
                </td>
                <td class="text-center">
                  <%= link_to 'Delete', sale_path(sale), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

