<div class="container-fluid">
  <div class="row">
    <div class="col mt-4">
      <div class="d-flex justify-content-end mb-3">
      <%= link_to "New expense", new_expense_path, class: 'btn btn-primary' %>
      </div>
      <div class="table-responsive">
        <table class="table product-table">
          <thead class="bg-primary text-white">
            <tr>
              <th>S.No</th>
              <th>Name</th>
              <th>Details</th>
              <th>Amount</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% # Loop through your products and display each row in the table %>
            <% @expenses.each do |expense| %>
              <tr>
                <td><%= expense.id %></td>
                <td><%= expense.name %></td>
                <td><%= expense.detail%></td>
                <td><%= expense.amount %></td>
                <td>
                  <%= link_to 'Edit', edit_expense_path(expense), class: 'btn btn-warning btn-sm' %>
                  <%= link_to 'Delete', expense_path(expense), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

