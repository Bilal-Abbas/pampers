<div class="container">
  <%= form_with(model: expense) do |form| %>
    <% if expense.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(expense.errors.count, "error") %> prohibited this expense from being saved:</h2>

        <ul>
          <% expense.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="form-group row mb-3">
          <%= form.label :name, class: "col-md-4 col-form-label" %>
          <div class="col-md-8">
            <%= form.text_field :name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= form.label :detail, class: "col-md-4 col-form-label" %>
          <div class="col-md-8">
            <%= form.text_field :detail, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= form.label :amount, class: "col-md-4 col-form-label" %>
          <div class="col-md-8">
            <%= form.number_field :amount, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-md-8 offset-md-4">
            <%= form.submit class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>