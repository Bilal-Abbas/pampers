<div id="<%= dom_id product %>">
  <p>
    <strong>Code:</strong>
    <%= product.code %>
  </p>

  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Quantity:</strong>
    <%= product.quantity %>
  </p>

  <p>
    <strong>Unit price:</strong>
    <%= product.unit_price %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

  <div class="row mt-4">
    <div class="col-md-6 text-center">
      <% if product.image? %>
        <%= image_tag @product.image.url, class: "img-fluid", alt: @product.name %>
      <% else %>
        <p>No image available.</p>
      <% end %>
    </div>
  </div>

</div>
