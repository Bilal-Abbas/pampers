<div class="container">
  <%= form_with(model: product) do |form| %>
    <% if product.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
          <% product.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="form-group row mb-3">
          <%= form.label :code, class: "col-md-4 col-form-label" %>
          <div class="col-md-8">
            <%= form.text_field :code, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= form.label :name, class: "col-md-4 col-form-label" %>
          <div class="col-md-8">
            <%= form.text_field :name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= form.label :quantity, class: "col-md-4 col-form-label" %>
          <div class="col-md-8">
            <%= form.number_field :quantity, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= form.label :unit_price, class: "col-md-4 col-form-label" %>
          <div class="col-md-8">
            <%= form.text_field :unit_price, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= form.label :description, class: "col-md-4 col-form-label" %>
          <div class="col-md-8">
            <%= form.text_area :description, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-8 offset-md-4">
            <%= form.submit class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
